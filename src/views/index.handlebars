<div class="container">
    <div class="row">
        {{#each products.payload}}
            <div class="col-md-3">
                <div class="card text-center fw-light">
                    <img src="{{this.thumbnails}}" class="img-fluid" alt="{{this.title}}">
                <div class="card-body">
                    <p class="card-text">{{this.title}}</p>
                    <p class="card-text">{{this.price}}</p>
                </div>
            </div>
        </div>
            

        {{/each}}    
        
        
    </div>

    <div class="row">
        <div class="col text-center">
            {{#if products.hasPrevPage}}
                <a href="{{products.prevLink}}" class="text-decoration-none">⬅</a>          
            {{/if}}
        
            {{#if products.page}}
                <a href="#" class="text-decoration-none">{{products.page}}</a>          
            {{/if}}
        
            {{#if products.hasNextPage}}
                <a href="{{products.nextLink}}" class="text-decoration-none">➡</a>          
            {{/if}}
        </div>
    </div>
</div>

